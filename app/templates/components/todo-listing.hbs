<table class="table table-striped table-hover">
    <thead>
    <tr>
        <td>Title</td>
        <td>Owner</td>
        <td>Person</td>
        <td>Actions</td>
    </tr>
    </thead>
    <tbody>

    {{#each todos as |todo|}}
        <tr>
            <td>{{ todo.title }}</td>
            <td>{{ todo.owner.firstName}}</td>
            <td>{{ todo.person.firstName}}</td>
            <td>
                {{#link-to "todos.edit" todo class="btn btn-warning"}}
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <span class="hidden-smd-inline">Edit</span>
                {{/link-to}}
                &nbsp;
                {{#link-to "todos.show" todo class="btn btn-primary"}}
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    <span class="hidden-smd-inline">Show</span>
                {{/link-to}}

            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
